# Git attributes for security and file handling

# Mark sensitive file patterns for special handling
*.pem filter=git-crypt diff=git-crypt merge=git-crypt
*.key filter=git-crypt diff=git-crypt merge=git-crypt
*.p12 filter=git-crypt diff=git-crypt merge=git-crypt
*.pfx filter=git-crypt diff=git-crypt merge=git-crypt

# Environment files - exclude from exports
.env* export-ignore
.envrc* export-ignore

# Terraform state and variables - never export
*.tfstate export-ignore
*.tfstate.* export-ignore
*.tfvars export-ignore
terraform.tfvars export-ignore

# AWS and cloud credentials
.aws/* export-ignore
credentials export-ignore
config export-ignore

# SSH keys and certificates
id_rsa export-ignore
id_ed25519 export-ignore
*.crt export-ignore
*.csr export-ignore

# Database dumps and backups (may contain sensitive data)
*.sql export-ignore
*.dump export-ignore
*.backup export-ignore

# Log files (may contain sensitive data)
*.log export-ignore
logs/* export-ignore

# Temporary and cache files
.cache/* export-ignore
__pycache__/* export-ignore
*.pyc export-ignore
.pytest_cache/* export-ignore

# IDE and editor files
.vscode/* export-ignore
.idea/* export-ignore
*.swp export-ignore
*.swo export-ignore
*~ export-ignore

# OS-specific files
.DS_Store export-ignore
Thumbs.db export-ignore
desktop.ini export-ignore

# Package manager files
node_modules/* export-ignore
.npm export-ignore
.yarn export-ignore

# Build and distribution files
build/* export-ignore
dist/* export-ignore
*.egg-info/* export-ignore

# Documentation build files
docs/_build/* export-ignore
site/* export-ignore

# Test coverage and reports
htmlcov/* export-ignore
.coverage export-ignore
coverage.xml export-ignore
*.cover export-ignore
.hypothesis/* export-ignore

# Jupyter notebook checkpoints
.ipynb_checkpoints/* export-ignore

# Local configuration overrides
local.* export-ignore
override.* export-ignore

# Backup files
*.bak export-ignore
*.backup export-ignore
*.old export-ignore

# Temporary directories
tmp/* export-ignore
temp/* export-ignore

# Git-specific attributes for text files
*.py text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.sql text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.tgz binary
*.rar binary
*.7z binary

# Large files (use Git LFS if needed)
*.db filter=lfs diff=lfs merge=lfs -text
*.sqlite filter=lfs diff=lfs merge=lfs -text
*.sqlite3 filter=lfs diff=lfs merge=lfs -text

# Model files and datasets
*.pkl filter=lfs diff=lfs merge=lfs -text
*.pickle filter=lfs diff=lfs merge=lfs -text
*.joblib filter=lfs diff=lfs merge=lfs -text
*.h5 filter=lfs diff=lfs merge=lfs -text
*.hdf5 filter=lfs diff=lfs merge=lfs -text
*.parquet filter=lfs diff=lfs merge=lfs -text

# Archive files
*.tar filter=lfs diff=lfs merge=lfs -text
*.gz filter=lfs diff=lfs merge=lfs -text
*.bz2 filter=lfs diff=lfs merge=lfs -text
*.xz filter=lfs diff=lfs merge=lfs -text
