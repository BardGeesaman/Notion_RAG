# Amprenta RAG - Environment Configuration Template
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ============================================================
# REQUIRED API Keys
# ============================================================

# OpenAI - for embeddings and LLM queries
OPENAI_API_KEY=sk-your-openai-api-key-here

# Pinecone - vector database
PINECONE_API_KEY=your-pinecone-api-key-here

# Zotero - literature management
ZOTERO_API_KEY=your-zotero-api-key-here

# ============================================================
# PostgreSQL Database
# ============================================================

# For local Docker setup (docker-compose.yml defaults)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=amprenta
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Or use a full connection URL (overrides above if set)
# POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/amprenta

# ============================================================
# Optional Configuration
# ============================================================

# NCBI/GEO API (for higher rate limits when fetching public data)
NCBI_EMAIL=your-email@example.com
# GEO_API_KEY=your-geo-api-key

# CORS origins (comma-separated, for API server)
CORS_ORIGINS=http://localhost:8501,http://localhost:8000

# Notion sync (DEPRECATED - leave as false)
ENABLE_NOTION_SYNC=false
# NOTION_API_KEY=your-notion-key-if-needed

# ============================================================
# Feature Flags (defaults are fine for most setups)
# ============================================================

# Use Postgres as source of truth (recommended)
USE_POSTGRES_AS_SOT=true

# Feature caching (improves performance)
FEATURE_CACHE_ENABLED=true
FEATURE_CACHE_TTL=3600

# Auto-linking (links datasets to experiments/programs)
AUTO_LINK_ENABLED=true
AUTO_LINK_MIN_CONFIDENCE=0.8

# Signature scoring
ENABLE_SIGNATURE_SCORING=true
ENABLE_FEATURE_LINKING=true
