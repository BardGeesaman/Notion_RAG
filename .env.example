# ===========================================
# Amprenta RAG - Environment Configuration
# ===========================================
# Copy this file to .env and fill in values
# Generated: 2025-01-01

# ===========================================
# üîê REQUIRED SECRETS
# ===========================================
# These MUST be set or application will fail to start

# OpenAI API key for LLM operations
OPENAI_API_KEY=sk-...

# Zotero API key for literature management
ZOTERO_API_KEY=

# Electronic signature HMAC key (32+ hex chars)
# Generate: python -c "import secrets; print(secrets.token_hex(32))"
SIGNATURE_SECRET_KEY=

# JWT signing key for authentication (32+ hex chars)
# Generate: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=

# ===========================================
# üóÑÔ∏è DATABASE
# ===========================================

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=amprenta
POSTGRES_USER=postgres
POSTGRES_PASSWORD=

# ===========================================
# üìß EMAIL (Optional)
# ===========================================
# Required only if email notifications are enabled

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=

# ===========================================
# üîó EXTERNAL APIS (Optional)
# ===========================================

# Notion API key (only if ENABLE_NOTION_SYNC=true)
NOTION_API_KEY=

# NCBI GEO API key for higher rate limits
GEO_API_KEY=

# NCBI email (required for NCBI API access)
NCBI_EMAIL=

# ===========================================
# ‚öôÔ∏è FEATURE FLAGS
# ===========================================

# Enable Notion synchronization (default: false)
ENABLE_NOTION_SYNC=false

# Disable authentication for E2E testing only (default: false)
# WARNING: Never set to true in production!
DISABLE_AUTH=false

# Vector database backend (default: pgvector)
VECTOR_BACKEND=pgvector

# Use Postgres as source of truth (default: true)
USE_POSTGRES_AS_SOT=true

# ===========================================
# üîß PERFORMANCE TUNING (Optional)
# ===========================================

# Feature cache settings
FEATURE_CACHE_ENABLED=true
FEATURE_CACHE_TTL=3600
FEATURE_CACHE_MAX_SIZE=1000

# Feature linking
FEATURE_LINKING_MAX_WORKERS=10

# Auto-linking
AUTO_LINK_ENABLED=true
AUTO_LINK_MIN_CONFIDENCE=0.8

# ===========================================
# üíæ BACKUP (Optional)
# ===========================================

BACKUP_S3_ENABLED=false
BACKUP_S3_BUCKET=
BACKUP_LOCAL_DIR=./backups
BACKUP_RETENTION_DAYS=365

# ===========================================
# üß™ DEVELOPMENT ONLY
# ===========================================

# Enable SQLAlchemy query logging
POSTGRES_ECHO=false

# Environment name (dev/staging/prod)
ENVIRONMENT=dev

# CORS origins for local development
CORS_ORIGINS=http://localhost:8501,http://localhost:3000
