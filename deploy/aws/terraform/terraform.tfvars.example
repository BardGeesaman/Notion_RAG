# Example Terraform variables (do not use real secrets here)

# AWS Configuration
aws_region          = "us-east-1"
project_name        = "amprenta"
environment         = "dev"

# VPC Configuration
vpc_cidr            = "10.0.0.0/16"

# Database Configuration
# NOTE: db_password is NOT set here - populate directly in AWS Secrets Manager
# after running 'terraform apply'. The password will be stored in the 
# 'database' secret group for enhanced security.
db_name             = "amprenta"
db_username         = "amprenta_user"
db_instance_class   = "db.t3.micro"

# ECS Service Configuration
desired_count       = 1      # Number of tasks per service
api_cpu             = 512    # 0.5 vCPU
api_memory          = 1024   # 1 GB
dashboard_cpu       = 512    # 0.5 vCPU
dashboard_memory    = 1024   # 1 GB
