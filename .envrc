# Auto-activate myenv conda environment
# Requires: conda installed and initialized in shell RC file
# Setup: direnv allow

if command -v conda >/dev/null 2>&1; then
  if [ "$CONDA_DEFAULT_ENV" != "myenv" ]; then
    conda activate myenv
  fi
fi

# Test environment variables for local development
export SIGNATURE_SECRET_KEY="test-secret-key-for-local-development-only"
export JWT_SECRET_KEY="test-jwt-key-for-local-development-only"

